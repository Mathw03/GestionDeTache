{% extends 'base.html.twig' %}

{% block title %}GtUser index{% endblock %}
{% block activeuser %}active{% endblock %}
{% block h1 %}Gestion des utilisateur{% endblock %}
{% block brcr %}Gestion des utilisateur{% endblock %}
{% block section %}

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-12">
                    <h3 class="card-title  float-left">User</h3>
                    <a type="button" class="btn btn-info btn-lg  float-right"  href="{{ path('app_gt_user_new') }}">Create new</a>
                </div>
            </div>

        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>FullName</th>
                    <th>Category</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for gt_user in gt_users %}
                    <tr>
                        <td>{{ gt_user.id }}</td>
                        <td>{{ gt_user.email }}</td>
                        <td>{{ gt_user.roles ? gt_user.roles|json_encode : '' }}</td>
                        <td>{{ gt_user.fullName }}</td>
                        <td>{{ gt_user.category }}</td>
                        <td>
                            <a class="btn btn-info btn-sm " href="{{ path('app_gt_user_show', {'id': gt_user.id}) }}">Show</a>
                            <a class="btn btn-info btn-sm " href="{{ path('app_gt_user_edit', {'id': gt_user.id}) }}">Edit</a>
                            {{ include('gt_user/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    {% endblock %}


