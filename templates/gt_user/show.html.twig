    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gt_user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ gt_user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ gt_user.roles ? gt_user.roles|json_encode : '' }}</td>
