{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}
{% block activecategory %}active{% endblock %}
{% block h1 %}Gestion des categorie{% endblock %}
{% block brcr %}Gestion des categories{% endblock %}
{% block section %}
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-12">
                    <h3 class="card-title  float-left">Category </h3>
                    <a type="button" class="btn btn-info btn-lg  float-right"  href="{{ path('app_category_new') }}">Create new</a>
                </div>
            </div>

        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.categoryName }}</td>
                        <td>{{ category.categoryDescription }}</td>
                        <td>
                            <a class="btn btn-info btn-sm " href="{{ path('app_category_show', {'id': category.id}) }}">Show</a>
                            <a class="btn btn-info btn-sm " href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                             {{ include('category/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
{% endblock %}
