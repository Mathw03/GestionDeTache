{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}
{% block activecategory %}active{% endblock %}
{% block section %}
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create a Category</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <form>
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.categoryName) }}</label>
                    {{ form_widget(form.categoryName,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.categoryDescription) }}</label>
                    {{ form_widget(form.categoryDescription,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <!-- /.card-body -->

            <div class="card-footer">
                {{ include('category/_form.html.twig', {'button_label': 'Save'}) }}
                <a class="btn btn-info btn-sm "href="{{ path('app_category_index') }}">Back to list</a>
            </div>

        </form>
    </div>
    {{ form_end(form) }}
{% endblock %}
