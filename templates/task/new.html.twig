{% extends 'base.html.twig' %}

{% block title %}New Task{% endblock %}
{% block activetask %}active{% endblock %}
{% block section %}
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create new task</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <form>
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.taskName) }}</label>
                    {{ form_widget(form.taskName,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.taskDescription) }}</label>
                    {{ form_widget(form.taskDescription,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.category) }}</label>
                    {{ form_widget(form.category,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <!-- /.card-body -->

            <div class="card-footer">
                {{ include('task/_form.html.twig', {'button_label': 'Save'}) }}
                <a class="btn btn-info btn-sm "href="{{ path('app_task_index') }}">Back to list</a>
            </div>

        </form>
    </div>
    {{ form_end(form) }}
{% endblock %}
